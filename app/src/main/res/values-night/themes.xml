<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketBox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/magneta_50</item>
        <item name="colorPrimaryVariant">@color/magenta_100</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_50</item>
        <item name="colorSecondaryVariant">@color/orange_100</item>
        <item name="colorOnSecondary">@color/grey</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>